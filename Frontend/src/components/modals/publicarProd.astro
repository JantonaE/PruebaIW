import * as utils from "@lib/utils.ts";
import * as lib from "@lib/lib.ts";
import { v2 as cloudinary } from "cloudinary";
import { getUser } from "@pages/auth/auth.ts";
import type { ProductoOutput } from "api";

// Configure Cloudinary with API credentials
cloudinary.config({
  cloud_name: import.meta.env.CLOUDINARY_CLOUDNAME,
  api_key: import.meta.env.CLOUDINARY_APIKEY,
  api_secret: import.meta.env.CLOUDINARY_APISECRET,
});

const loggedUser = getUser();

const uploadStream = async (buffer: Uint8Array, option: any) => {
  return new Promise((resolve, reject) => {
    cloudinary.uploader
      .upload_stream(option, (error, result) => {
        if(error) return reject(error);
        resolve(result);
      })
      .end(buffer);
  });
};


if(Astro.request.method == "POST"){
  try{

    const data = await Astro.request.formData();
    const titulo = data.get("titulo").toString();
    const descripcion = data.get("descripcion").toString();
    const precio = Number(data.get("price"));
    const peso = Number(data.get("peso"));
    const edad = Number(data.get("edad"));
    const auxDate = data.get("fecha_cierre").toString();
    const file = data.getAll("file") as File[];

    var partesFecha = auxDate.split("-");
    console.log("edad " +edad);
    // Las partes de la fecha están en el formato [mes, día, año]
    var año = parseInt(partesFecha[0], 10).toString();
    var mes = parseInt(partesFecha[1], 10).toString();
    var dia = parseInt(partesFecha[2], 10).toString();

    const fecha_cierre = dia+"/"+mes+"/"+año;
    
    console.log("fecha cierre: " + fecha_cierre);
   
    let imagenes: String[] = [];

    for(let i = 0; i < file.length; i++){
        imagenes.push("imagen"+i);
    }

    console.log(imagenes);
        
    
   

    const res = await lib.createProduct(
        loggedUser.idUser, titulo, descripcion, edad, precio, peso, fecha_cierre, imagenes);
    console.log(res)

    console.log("Posteando imagenes");

    for(let i = 0; i < file.length; i++){
        const imagen = file[i];
        //console.log(imagen.name);
        const arrayBuffer = await imagen.arrayBuffer();
        const uit8array = new Uint8Array(arrayBuffer);
        //console.log("Array Buffer:", arrayBuffer);
        //console.log("Uint8Array:", uit8array);
        const response = await uploadStream(uit8array, {
            folder: res.idProd, public_id: "imagen" + i
        });
        //console.log(response);
    }

    console.log("Finished");

    return Astro.redirect("/");

  }catch(error){
    if(error instanceof Error){
      console.error(error.message);
    }
  }
}
